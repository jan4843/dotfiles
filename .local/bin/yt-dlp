#!/bin/sh -e

IMAGE="yt-dlp:latest"

if ! docker image inspect "$IMAGE" > /dev/null 2>&1; then
	docker build --tag "$IMAGE" - <<-EOF
	FROM alpine
	RUN apk add --no-cache ffmpeg yt-dlp
	ENTRYPOINT ["yt-dlp"]
	EOF
fi

# shellcheck disable=SC2046
exec docker container run \
	--rm \
	--interactive \
	$(test -t 0 && printf %s --tty) \
	--volume "$HOME:$HOME" \
	--volume "$PWD:$PWD" \
	--workdir "$PWD" \
	"$IMAGE" "$@"
